<a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <br><br>
<div class="well">
    <ul>
        <% posts.reverse() %>
        <% for(var i=0; i<posts.length; i++) { %>
            <li>
                <h1><%= posts[i].title %></h1>
                <br>
                <%= posts[i].text %>
                <br>
                <button class="editPost" type="button">Edit Me!</button>

                <section class="editForm">
                    <form method="post" action="/editallpost/<%= posts[i]._id %>">
                        <div class="row 50%">
                            <div class="6u 12u(mobile)">
                                <input name="title" placeholder="Title" type="text" value="<%= posts[i].title %>" />
                            </div>
                        </div>
                        <div class="row 50%">
                            <div class="12u">
                                <textarea name="text" placeholder="Text"><%= posts[i].text %></textarea>
                            </div>
                        </div>
                        <div class="row 50%">
                            <div class="12u">
                                <ul class="actions">
                                    <li><input type="submit" value="Send Post" /></li>
                                    <br>
                                    <li><input type="reset" value="Clear form" /></li>
                                </ul>
                            </div>
                        </div>
                    </form>
                </section>
                <h3>sekantis</h3>
            </li>
        <% } %>
    </ul>

</div>